{
  "settings": {
    "number_of_shards": 6,
    "number_of_replicas": 1,
    "index": {
      "codec": "best_compression",
      "max_ngram_diff": 8,
      "analysis": {
        "analyzer": {
          "ngram_analyzer": {
            "tokenizer": "standard",
            "filter": ["lowercase", "ngram_filter"]
          }
        },
        "filter": {
          "ngram_filter": {
            "type": "ngram",
            "min_gram": 5,
            "max_gram": 10
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },

      "first_name": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "ngram": { "type": "text", "analyzer": "ngram_analyzer" }
        }
      },
      "last_name": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "ngram": { "type": "text", "analyzer": "ngram_analyzer" }
        }
      },

      "company_id": {
        "type": "keyword"
      },

      "email": {
        "type": "keyword"
      },

      "title": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "ngram": { "type": "text", "analyzer": "ngram_analyzer" }
        }
      },

      "departments": {
        "type": "keyword"
      },

      "mobile_phone": {
        "type": "keyword"
      },
      "email_status": {
        "type": "keyword"
      },
      "seniority": {
        "type": "keyword"
      },

      "city": {
        "type": "text",
        "analyzer": "standard"
      },
      "state": {
        "type": "text",
        "analyzer": "standard"
      },
      "country": {
        "type": "text",
        "analyzer": "standard"
      },

      "linkedin_url": {
        "type": "text",
        "analyzer": "standard"
      },

      "company_name": {
        "type": "text",
        "fields": {
          "ngram": { "type": "text", "analyzer": "ngram_analyzer" }
        }
      },

      "company_employees_count": {
        "type": "long"
      },

      "company_industries": {
        "type": "keyword"
      },

      "company_keywords": {
        "type": "keyword"
      },

      "company_address": {
        "type": "text",
        "analyzer": "standard"
      },

      "company_annual_revenue": {
        "type": "long"
      },

      "company_total_funding": {
        "type": "long"
      },

      "company_technologies": {
        "type": "keyword"
      },

      "company_city": {
        "type": "text",
        "analyzer": "standard"
      },

      "company_state": {
        "type": "text",
        "analyzer": "standard"
      },

      "company_country": {
        "type": "text",
        "analyzer": "standard"
      },

      "company_linkedin_url": {
        "type": "text",
        "analyzer": "standard"
      },

      "company_website": {
        "type": "text",
        "fields": {
          "ngram": { "type": "text", "analyzer": "ngram_analyzer" }
        }
      },

      "company_normalized_domain": {
        "type": "text",
        "fields": {
          "ngram": { "type": "text", "analyzer": "ngram_analyzer" }
        }
      },

      "created_at": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      }
    }
  }
}